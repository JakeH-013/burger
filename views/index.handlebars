<div class="container">
    <div class="row justify-content-center">
        <div class="col col-md-12">
            <h1><strong>Welcome to Burgr-Bash!</strong></h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>Burger's on the line.</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">

            <h2>Burgers in your belly!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

    <div class="row">
        <div class="center col-sm-12">

            <h2>Order a burger.</h2>
            <form class="prep-form">

                <div class="form-group">
                    <label for="newFood">Burger name:</label>
                    <input type="text" id="newFood" name="name">
                </div>

                <button type="submit">Order up!</button>
            </form>
        </div>
    </div>

</div>